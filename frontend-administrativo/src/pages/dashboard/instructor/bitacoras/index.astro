---
import DashboardLayout from '../../../../layouts/DashboardLayout.astro';

const myLogs = [
  { id: 1, date: '2023-11-01', program_name: 'Salsa Casino 1' },
  { id: 2, date: '2023-11-02', program_name: 'Bachata' }
];
---

<DashboardLayout title="Mi Bitácora">
  <header class="header-section">
    <h1>Mis Registros de Bitácora</h1>
    <a href="/dashboard/instructor/bitacoras/nueva" class="btn-primary">Nuevo Reporte</a>
  </header>

  <div class="grid">
    {myLogs.map(log => (
      <div class="log-card">
        <span class="date">{log.date}</span>
        <h3>{log.program_name}</h3>
        <a href={`/dashboard/instructor/bitacoras/${log.id}`}>Ver reporte completo</a>
      </div>
    ))}
  </div>
</DashboardLayout>

<style>
  .header-section { display: flex; justify-content: space-between; margin-bottom: 2rem; }
  .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 1.5rem; }
  .log-card { background: white; padding: 1.5rem; border-radius: 12px; border-left: 5px solid #334155; }
  .date { color: #64748b; font-size: 0.8rem; font-weight: bold; }
  .log-card h3 { margin: 0.5rem 0; font-size: 1.1rem; }
  .log-card a { color: #0ea5e9; text-decoration: none; font-size: 0.9rem; }
</style>

<script>
  import { checkAccess } from '../../../../utils/roleGuard.js';
  checkAccess(['2']); // Solo Instructor
</script>