<section class="w-full min-h-screen grid grid-cols-1 md:grid-cols-2">
  <!-- Lado izquierdo: mapa con overlay -->
  <div class="relative">
  <!-- Google Maps iframe -->
  <iframe 
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d334.2863919935023!2d-67.36204347073026!3d9.89242990322624!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x28f5501d7ee1136d%3A0xd98186e69a0dceae!2sGrupo%20Bailemos!5e0!3m2!1ses!2sve!4v1764016176561!5m2!1ses!2sve"
    width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy">
  </iframe>

  <!-- Overlay con dirección y botón -->
  <div class="absolute inset-0 bg-[#3F2B67]/70 flex flex-col items-center justify-center text-center px-6">
    <div>
      <h3 class="text-2xl font-bold text-white mb-2">Nuestra Dirección</h3>
      <p class="text-white text-lg mb-6">Centro Italo Venezolano, San Juan de Los Morros 2301, Guárico</p>
      <a href="https://maps.app.goo.gl/MqYAEDjayw6jS5iC8" target="_blank"
         class="bg-[#23E628] text-[#331D2C] font-semibold px-6 py-2 rounded-lg shadow 
                hover:bg-[#29821E] transition inline-flex items-center gap-2">
        Ir a Google Maps
        <!-- Icono de ubicación -->
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5s-3 1.343-3 3 1.343 3 3 3z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M12 22s8-4.5 8-11a8 8 0 10-16 0c0 6.5 8 11 8 11z"/>
        </svg>
      </a>
    </div>
  </div>
</div>


  <!-- Lado derecho: formulario -->
  <div id="contacto" class="flex items-center justify-center p-12">
    <form class="w-full max-w-md space-y-6">
      <h3 class="text-4xl font-bold mb-4">Contáctanos</h3>
      
      <!-- Nombre -->
      <div>
        <label class="block text-sm font-medium  mb-1">Nombre</label>
        <input type="text" class="w-full border border-[#3F2B67] rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#23E628]" placeholder="Tu nombre">
      </div>
      
      <!-- Email -->
      <div>
        <label class="block text-sm font-medium  mb-1">Correo electrónico</label>
        <input type="email" class="w-full border border-[#3F2B67] rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#23E628]" placeholder="tu@email.com">
      </div>
      
      <!-- Mensaje -->
      <div>
        <label class="block text-sm font-medium mb-1">Mensaje</label>
        <textarea rows="4" class="w-full border border-[#3F2B67] rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#23E628]" placeholder="Escribe tu mensaje"></textarea>
      </div>
      
      <!-- Botón -->
      <button type="submit" class="w-full bg-[#23E628] font-semibold px-6 py-3 rounded-lg shadow hover:bg-[#29821E] transition">
        Enviar Mensaje
      </button>
    </form>
  </div>
</section>