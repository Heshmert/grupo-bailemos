---
import Layout from "../layouts/Layout.astro";
import Programa from "../components/Programa.svelte";
import programas from "../data/programas.json"
import Testimonio from '../components/Testimonio.astro';
import testimonios from '../data/testimonios.json';
---

<Layout>


<section class="relative w-full min-h-screen bg-deep flex items-center justify-center text-center text-white">
  <!-- Banner de imágenes (collage/slider simulado con grid) -->
  <div class="absolute inset-0 grid grid-cols-2 md:grid-cols-4">
    <img src="/carrusel_programas (1).jpeg" alt="Ballet" class="w-full h-full object-cover">
    <img src="/carrusel_programas (2).jpeg" alt="Urbano" class="w-full h-full object-cover">
    <img src="/carrusel_programas (3).jpeg" alt="Zumba" class="w-full h-full object-cover hidden md:block">
    <img src="/carrusel_programas (4).jpeg" alt="Arte" class="w-full h-full object-cover hidden md:block">
  </div>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-[#331D2C]/80"></div>

  <!-- Contenido central -->
  <div class="relative z-10 max-w-4xl px-6">
    <h1 class="text-4xl md:text-8xl font-bold mb-6">Descubre tu pasión, vive el sueño</h1>
    <p class="text-lg md:text-xl mb-8">
      Nuestros programas transforman energía en talento, disciplina en éxito y creatividad en Diamantes.
    </p>
    <a href="#lista-programas" 
       class="bg-balanced text-[#331D2C] font-semibold px-8 py-3 rounded-lg shadow hover:bg-[#29821E] transition">
       Explorar Programas
    </a>
  </div>
</section>

<section id="lista-programas" class="py-16 bg-[#FDFBF7]">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h2 class="text-6xl font-bold text-[#3F2B67] mb-12 anton">Nuestros Programas</h2>

    <!-- Grid de programas -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {programas.programas.map((prog) => (
        <Programa
          titulo={prog.titulo}
          descripcion={prog.descripcion}
          imagen={prog.imagen}
          resumen={prog.resumen}
          galeria={prog.galeria}
          contenidos={prog.contenidos}
          client:only
        />
      ))}
    </div>
  </div>
</section>

<section class="py-16 bg-deep">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-white mb-12 text-center">Eventos</h2>

    <!-- Encabezado de días -->
    <div class="grid grid-cols-7 text-center mb-4">
      <div class="text-[#23E628] font-semibold">Lunes</div>
      <div class="text-[#23E628] font-semibold">Martes</div>
      <div class="text-[#23E628] font-semibold">Miércoles</div>
      <div class="text-[#23E628] font-semibold">Jueves</div>
      <div class="text-[#23E628] font-semibold">Viernes</div>
      <div class="text-[#23E628] font-semibold">Sábado</div>
      <div class="text-[#23E628] font-semibold">Domingo</div>
    </div>

    <!-- Calendario -->
    <div class="grid grid-cols-7 grid-rows-4 gap-0 border border-[#23E628]">
      
      <!-- Día vacío -->
      <div class="h-40 border border-[#23E628]"></div>

      <!-- Evento -->
      <div class="h-40 border border-[#23E628] bg-white p-2 flex flex-col justify-between">
        <span class="text-[#23E628] font-bold text-sm">5 Dic</span>
        <h3 class="text-sm font-semibold text-[#3F2B67]">Clase Maestra</h3>
        <p class="text-xs text-[#331D2C]">Urban Fusion con Sofía Luna.</p>
      </div>

      <!-- Evento -->
      <div class="h-40 border border-[#23E628] bg-white p-2 flex flex-col justify-between">
        <span class="text-[#23E628] font-bold text-sm">12 Dic</span>
        <h3 class="text-sm font-semibold text-[#3F2B67]">Presentación Ballet</h3>
        <p class="text-xs text-[#331D2C]">Alumnos avanzados en escena.</p>
      </div>

      <!-- Día vacío -->
      <div class="h-40 border border-[#23E628]"></div>

      <!-- Evento -->
      <div class="h-40 border border-[#23E628] bg-white p-2 flex flex-col justify-between">
        <span class="text-[#23E628] font-bold text-sm">18 Dic</span>
        <h3 class="text-sm font-semibold text-[#3F2B67]">Taller de Zumba</h3>
        <p class="text-xs text-[#331D2C]">Diversión y cardio pre-navidad.</p>
      </div>

      <!-- Evento -->
      <div class="h-40 border border-[#23E628] bg-white p-2 flex flex-col justify-between">
        <span class="text-[#23E628] font-bold text-sm">25 Dic</span>
        <h3 class="text-sm font-semibold text-[#3F2B67]">Festival Navideño</h3>
        <p class="text-xs text-[#331D2C]">Baile y arte en comunidad.</p>
      </div>

      <!-- Día vacío -->
      <div class="h-40 border border-[#23E628]"></div>

      <!-- Resto de celdas vacías -->
      <!-- ... repetir hasta completar las 28 celdas -->
    </div>
  </div>
</section>

<section class="py-16 bg-air">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h2 class="text-6xl font-bold text-[#3F2B67] mb-12">Testimonios</h2>
    <div class="flex flex-wrap -m-4">
      {testimonios.testimonios.map((t) => (
        <Testimonio
          mensaje={t.mensaje} 
          nombre={t.nombre} 
          rol={t.rol} 
        />
      ))}
    </div>
  </div>
</section>

</Layout>
